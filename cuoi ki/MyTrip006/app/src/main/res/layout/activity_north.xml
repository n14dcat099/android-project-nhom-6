<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:weightSum="10">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


        <FrameLayout

            android:id="@+id/fragmentContainer"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/northBtn"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/buttonbac" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tour Thông Dụng"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/coto"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/coto" />

                                <ImageButton
                                    android:id="@+id/sapa"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/sapa" />

                                <ImageButton
                                    android:id="@+id/catba"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/catba" />

                                <ImageButton
                                    android:id="@+id/maichau"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/maichau" />

                            </LinearLayout>
                        </HorizontalScrollView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Khám phá"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:layout_width="200dp"
                                    android:id="@+id/placenorth"
                                    android:layout_height="80dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placesnorth" />

                                <ImageButton
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:id="@+id/beachnorth"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/beachnorth" />

                                <ImageButton
                                    android:layout_width="200dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/coffenorth" />


                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top 10 địa điểm du lịch"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/tphcm"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/sapa" />

                                <ImageButton
                                    android:id="@+id/coto10"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/coto" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/catba" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ninhbinh" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/maichau" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/dongmo" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/tamdao" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/thungnai" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/dailai" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/bavi" />


                            </LinearLayout>
                        </HorizontalScrollView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Top 10 địa điểm ăn uông"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/bunrieu"
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/f_coto1" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/banhdauxanh" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/banhngai" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/bunca" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/cakho" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/hutumytho_mytho" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/chaca" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/chaumuc" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/nemnam" />

                                <ImageButton
                                    android:layout_width="130dp"
                                    android:layout_height="95dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ruoucan" />


                            </LinearLayout>
                        </HorizontalScrollView>



                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"

                app:srcCompat="@android:drawable/ic_dialog_email" />

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            app:itemBackground="@color/brownDark"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/my_navigation_items" />
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
