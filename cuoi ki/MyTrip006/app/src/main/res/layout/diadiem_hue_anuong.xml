    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/hue"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Khách sạn"
                />

            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="#0206ed"
                android:text="Ăn uông"
                android:textColor="#ffffff"/>

            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Du lịch" />

        </LinearLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="165dp"
                            android:layout_height="150dp"
                            android:src="@drawable/comhenhue"/>

                        <Button
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Xem chi tiết" />

                        <Button
                            android:layout_marginTop="-5dp"
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Lưu" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="165dp"
                            android:layout_height="150dp"
                            android:src="@drawable/comamphuhue"/>

                        <Button
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Xem chi tiết" />

                        <Button
                            android:layout_marginTop="-5dp"
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Lưu" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="165dp"
                            android:layout_height="150dp"
                            android:src="@drawable/banhhue"/>

                        <Button
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Xem chi tiết" />

                        <Button
                            android:layout_marginTop="-5dp"
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Lưu" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="165dp"
                            android:layout_height="150dp"
                            android:src="@drawable/cafedep_khampha"/>

                        <Button
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Xem chi tiết" />

                        <Button
                            android:layout_marginTop="-5dp"
                            android:layout_width="165dp"
                            android:layout_height="40dp"
                            android:text="Lưu" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>




