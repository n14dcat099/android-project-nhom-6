<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ak_background"
        android:orientation="vertical"
        android:weightSum="10">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>


        <FrameLayout

            android:id="@+id/fragmentContainer"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/vungtau_uudaikhachsan"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ngay1"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Ngày 1" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#0206ed"
                        android:text="Ngày 2" />

                </LinearLayout>
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buổi Sáng"
                            android:textSize="20dp"
                            android:textStyle="bold"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn uống"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/banhkhotgvs_vungtau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bánh Khọt Gốc Vú Sữa /n Xếp hàng và hít khói để ăn bánh khọt Góc Vú Sữa ... Bánh rất giòn, con tôm ngọt lịm. Ai đó đã sáng tạo rất nhiều nhân bánh khọt: thịt heo, thịt bò, hải sản (mực, sò điệp...) nhưng có lẽ chỉ có nhân tôm là hợp với bánh khọt nhất..." />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Xem thêm"
                            android:textColor="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Du lịch"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ngonhaidangvt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hải đăng Vũng Tàu được người Pháp xây dựng vào năm 1862 nhằm mục đích chỉ đường, báo hiệu cho các tàu thuyền qua lại, nằm ở độ cao là 149m so với mực nước biển....." />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Xem thêm"
                            android:textColor="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buổi Trưa"
                            android:textSize="20dp"
                            android:textStyle="bold"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn uống"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/banhkhotgvs_vungtau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bánh Khọt Gốc Vú Sữa /n Xếp hàng và hít khói để ăn bánh khọt Góc Vú Sữa ... Bánh rất giòn, con tôm ngọt lịm. Ai đó đã sáng tạo rất nhiều nhân bánh khọt: thịt heo, thịt bò, hải sản (mực, sò điệp...) nhưng có lẽ chỉ có nhân tôm là hợp với bánh khọt nhất..." />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Xem thêm"
                            android:textColor="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Du lịch"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ngonhaidangvt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thảo cầm viên Sài Gòn là một trong những công trình mang tính lịch sử lâu đời của Thành phố Hồ Chí Minh và cũng là biểu tượng văn hóa đặc trưng của thành phố mang tên Bác...." />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Xem thêm"
                            android:textColor="@android:color/holo_blue_dark" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buổi Tối"
                            android:textSize="20dp"
                            android:textStyle="bold"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn uống"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/banhkhotgvs_vungtau" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bánh Khọt Gốc Vú Sữa /n Xếp hàng và hít khói để ăn bánh khọt Góc Vú Sữa ... Bánh rất giòn, con tôm ngọt lịm. Ai đó đã sáng tạo rất nhiều nhân bánh khọt: thịt heo, thịt bò, hải sản (mực, sò điệp...) nhưng có lẽ chỉ có nhân tôm là hợp với bánh khọt nhất..." />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Xem thêm"
                            android:textColor="@android:color/holo_blue_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Du lịch"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ngonhaidangvt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hải đăng Vũng Tàu được người Pháp xây dựng vào năm 1862 nhằm mục đích chỉ đường, báo hiệu cho các tàu thuyền qua lại, nằm ở độ cao là 149m so với mực nước biển....." />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Xem thêm"
                            android:textColor="@android:color/holo_blue_dark" />


                    </LinearLayout>


                </ScrollView>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>